<%= form_for [refinery, :press_admin, @endorsement] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @endorsement,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :quote -%>
    <%= f.text_field :quote, :class => 'larger widest'  -%>

  </div>
  
  <div class='field'>
    <%= f.label :source -%>
    <%= f.text_field :source  -%>

  </div>
  
  <div class='field'>
    <%= f.label :link -%>
    <%= f.text_field :link  -%>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.press.admin.press.endorsement'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @endorsement.quote) %>
<% end -%>
