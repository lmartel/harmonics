<% content_for :body_content_title do %>
  <%= @event.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1><%=raw @event.date %></h1>
  </section>
  <section>
    <p>
      <%= image_fu @event.photo, '500x500' %>
    </p>
  </section>
  <section>
    <p>
      <%=raw @event.blurb %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="events">
      <% @events.each do |event| %>
        <% unless event == @event %>
          <li>
            <%= link_to event.title, refinery.events_event_path(event) %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
