<% future = [] %>
<% past = [] %>
<% @events.each do |event| %>
 <% if event.date.future? then future << event else past << event end %>
<% end %>
<% content_for :body do %>
  <ul id="events">
    <% future.each do |event| %>
      <li>
        <%= render :partial => "event_summary", :locals => { :event => event } %>
      </li>
    <% end %>
    (Interested in scheduling us for a performance? <a href="mailto:business@stanfordharmonics.com">Please shoot us an email!</a>)
    <h1>Past Gigs</h1>
    <% past.each do |event| %>
      <li>
        <%= render :partial => "event_summary", :locals => { :event => event } %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render '/refinery/content_page' %>
