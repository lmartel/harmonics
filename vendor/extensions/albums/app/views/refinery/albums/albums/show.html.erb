<% content_for :body_content_title do %>
  <%= @album.title %>
<% end %>

<% content_for :body do %>
  <section>
    <p>
      <%=raw @album.date.year %>
    </p>
  </section>
  <section>
    <p>
      <%= image_fu @album.photo, '400x400' %>
    </p>
  </section>
  <section>
    <h3><%= link_to 'Purchase Link', @album.purchase_link %></h3>
  </section>
  <section>
    <p>
      <%=raw @album.description %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="albums">
      <% @albums.each do |album| %>
        <li>
          <%= link_to album.title, refinery.albums_album_path(album) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
