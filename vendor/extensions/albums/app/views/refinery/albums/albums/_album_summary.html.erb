<div class="media">
  <a class="pull-left" href=<%= refinery.albums_album_path(album) %>>
    <%= image_fu album.photo, '100x100', {:class => "media-object"} %>
  </a>
  <div class="media-body">
    <h4 class="media-heading">
      <%= link_to album.title, refinery.albums_album_path(album) %>
    </h4>
    <%= raw album.summary %>
  </div>
  <br>
</div>