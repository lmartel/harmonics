<%= raw @page.content_for(:body) %>
<% content_for :body do %>
	
  <%= simple_form_for([refinery, :auditions, @audition], :html => {:class => 'form-horizontal'})  do |f| %>
		  <% if flash[:alert] %>
		    <p class="error"><%= flash[:alert] %></p>
		  <% elsif flash[:notice] %>
		  	<p class="success"><%= flash[:notice] %></p>
		  <% end %>
			<%= f.input :firstname, label: "First Name" %>
			<%= f.input :lastname, label: "Last Name" %>
			<%= f.input :email %>
			<%= f.input :phone, label: "Cell Phone No." %>
			<%= f.input :dorm %>
			<%= f.input :room, label: "Room Number" %>
			<%= f.input :year, label: "Graduation Year" %>
			<%= f.input :voice, label: "Voice Part", hint: "Alto, Tenor, etc. \"I don't know\" is totally fine!" %>
			<%= f.association :slot, label: "Audition Time", collection: @availabilities.count > 0 ? @availabilities : ["No slots available =("] %>
			<%= f.button :submit %>
	<% end %>

<% end %>

<%= render '/refinery/content_page' %>
