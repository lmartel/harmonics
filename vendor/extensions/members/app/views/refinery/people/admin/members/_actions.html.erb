<ul>
  <% if ::Refinery::People::Admin::MembersController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.people_admin_members_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_people_admin_member_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::People::Admin::MembersController.sortable? && ::Refinery::People::Member.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Members"),
                 refinery.people_admin_members_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Members"),
                 refinery.people_admin_members_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
